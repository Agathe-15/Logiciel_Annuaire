<Window x:Class="Logiciel_Annuaire.src.Views.DepartementFormWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Département" Height="200" Width="400">
    <Grid Margin="20">
        <StackPanel>
            <Label Content="Nom :" />
            <TextBox x:Name="NomTextBox" Width="300" />

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <Button Content="Enregistrer" Click="OnSaveClick" Width="100"/>
                <Button Content="Annuler" Click="OnCancelClick" Width="100" Margin="10,0,0,0"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
