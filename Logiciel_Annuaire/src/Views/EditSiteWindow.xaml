<Window x:Class="Logiciel_Annuaire.src.Views.EditSiteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Modifier un site" Height="300" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Nom :" />
            <TextBox x:Name="NomTextBox" />

            <TextBlock Text="Ville :" />
            <TextBox x:Name="VilleTextBox" />

            <TextBlock Text="Type :" />
            <TextBox x:Name="TypeTextBox" />

            <TextBlock Text="Adresse :" />
            <TextBox x:Name="AdresseTextBox" />

            <TextBlock Text="Téléphone :" />
            <TextBox x:Name="TelephoneTextBox" />

            <TextBlock Text="Email :" />
            <TextBox x:Name="EmailTextBox" />

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <Button Content="Enregistrer" Click="OnSaveClick" Width="100" />
                <Button Content="Annuler" Click="OnCancelClick" Width="100" Margin="10,0,0,0" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
