<Window x:Class="Logiciel_Annuaire.Views.EditEmployeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Modifier Employé" Height="450" Width="400">
    <StackPanel Margin="20">
        <!-- Nom -->
        <TextBlock Text="Nom :" Margin="0,5,0,0" />
        <TextBox x:Name="NomTextBox" Width="200" AutomationProperties.Name="Nom Employé" />

        <!-- Prénom -->
        <TextBlock Text="Prénom :" Margin="0,5,0,0" />
        <TextBox x:Name="PrenomTextBox" Width="200" AutomationProperties.Name="Prénom Employé" />

        <!-- Téléphone -->
        <TextBlock Text="Téléphone :" Margin="0,5,0,0" />
        <TextBox x:Name="TelephoneTextBox" Width="200" AutomationProperties.Name="Téléphone Employé" />

        <!-- Email -->
        <TextBlock Text="Email :" Margin="0,5,0,0" />
        <TextBox x:Name="EmailTextBox" Width="200" AutomationProperties.Name="Email Employé" />

        <!-- Date d'embauche -->
        <TextBlock Text="Date d'embauche :" Margin="0,5,0,0" />
        <DatePicker x:Name="DateEmbauchePicker" Width="200" />

        <!-- Site -->
        <TextBlock Text="Ville :" Margin="0,5,0,0" />
        <ComboBox x:Name="SiteComboBox" 
                  ItemsSource="{Binding Sites}" 
                  DisplayMemberPath="Ville"
                  SelectedValuePath="SiteId" 
                  SelectedValue="{Binding UpdatedEmploye.SiteId, Mode=TwoWay}" 
                  Width="200" />

        <!-- Poste -->
        <TextBlock Text="Poste :" Margin="0,5,0,0" />
        <ComboBox x:Name="PosteComboBox" 
                  ItemsSource="{Binding Postes}" 
                  DisplayMemberPath="Nom"
                  SelectedValuePath="DepartementId" 
                  SelectedValue="{Binding UpdatedEmploye.PosteId, Mode=TwoWay}" 
                  Width="200" />

        <!-- Boutons-->
        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
            <Button Content="Enregistrer" Width="100" Click="OnSaveClick" />
            <Button Content="Annuler" Width="100" Margin="10,0,0,0" Click="OnCancelClick" />
        </StackPanel>
    </StackPanel>
</Window>
